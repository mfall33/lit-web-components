{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}